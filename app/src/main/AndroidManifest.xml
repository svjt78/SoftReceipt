<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.debalina.softreceipt" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".eMailActivity"
            android:label="@string/title_activity_e_mail"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.debalina.softreceipt.MainActivity" />
        </activity>
        <activity
            android:name=".AdminActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.debalina.softreceipt.MainActivity" />
        </activity>
        <activity
            android:name=".ViewReceipt"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.debalina.softreceipt.MainActivity" />
        </activity>
        <activity
            android:name=".validateAdminPasscode"
            android:label="@string/title_activity_validate_admin_passcode"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MyFloatingWindow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.debalina.softreceipt.MainActivity" />
        </activity>
        <activity
            android:name=".SnapActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ViewReceipt" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.debalina.softreceipt.ViewReceipt" />
        </activity>
    </application>

</manifest>
